extends ./layout.pug

block body
    .grid
        each work in document.results
            .work.inner
                a(href="../page/" + work.uid)
                    img(src=work.data.image.url)

    script. 
        FlexMasonry.init('.grid',{
        responsive: true,
            breakpointCols: {
                'min-width: 992px': 3,
                'min-width: 768px': 2,
                'min-width: 576px': 1
            },
        });
